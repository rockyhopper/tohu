<assembly>
	<id>bin</id>
	<formats>
	  <format>dir</format>
	</formats>
    <includeBaseDirectory>false</includeBaseDirectory>

    <fileSets>
	    <fileSet>
  			<directory>${basedir}</directory>
			<outputDirectory>binary</outputDirectory>	    
			<includes>	
				<include>**/README.TXT</include>
				<include>**/styleTemplate.css</include>
			</includes>
	    </fileSet>
    </fileSets>
	<moduleSets>     
		<moduleSet>      		
			<includes>
				<include>org.tohu:tohu-loader</include>            
			</includes>
			<binaries>
				<outputDirectory>binary</outputDirectory>
				<unpack>false</unpack>
				<dependencySets>
					<dependencySet>
						<useTransitiveDependencies>true</useTransitiveDependencies>
					</dependencySet>
				</dependencySets>
			</binaries>
		</moduleSet>
		<moduleSet>
			<includes>
				<include>org.tohu:tohu-xml</include>             
			</includes>
			<binaries>
				<outputDirectory>binary</outputDirectory>
				<unpack>false</unpack>
				<dependencySets>
					<dependencySet>
						<useTransitiveDependencies>true</useTransitiveDependencies>
					</dependencySet>
				</dependencySets>
			</binaries>
		</moduleSet>
		<moduleSet>
			<includes>
				<include>org.tohu:tohu-domain</include>                    
			</includes>
			<binaries>
				<outputDirectory>binary</outputDirectory>
				<unpack>false</unpack>
				<dependencySets>
					<dependencySet>
						<useTransitiveDependencies>true</useTransitiveDependencies>
					</dependencySet>
				</dependencySets>
			</binaries>
		</moduleSet>
		<moduleSet>
			<includes>        
				<include>org.tohu:tohu-core</include>             
			</includes>
			<binaries>
				<outputDirectory>binary</outputDirectory>
				<unpack>false</unpack>
				<dependencySets>
					<dependencySet>
						<useTransitiveDependencies>true</useTransitiveDependencies>
					</dependencySet>
				</dependencySets>
			</binaries>
		</moduleSet>
		<moduleSet>
			<includes>
				<include>org.tohu:tohu-jquery-client</include>             
			</includes>
			<binaries>
				<outputDirectory>binary</outputDirectory>
				<unpack>false</unpack>
				<dependencySets>
					<dependencySet>
						<useTransitiveDependencies>true</useTransitiveDependencies>
					</dependencySet>
				</dependencySets>
			</binaries>
		</moduleSet>													
	</moduleSets>
	
</assembly>
